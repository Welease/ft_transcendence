<body style="background-image: url('/assets/chat.gif'); background-size: cover; height: 100vh; padding:0; margin:0; text-align: center;">
  <%= form_for(@chat_room, url: {:controller => 'chat_rooms', :action=>'update'}, remote: true) do |form| %>
      <% if chat_room.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(chat_room.errors.count, "error") %> prohibited this chat_room from being saved:</h2>
          <ul>
            <% chat_room.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div style="color: white; font-family: fantasy;">
        <%= form.text_field :name, placeholder: "Room name", class: "text_sign_up", type: :hidden  %>
      </div>

      <div style="color: white; font-family: fantasy;">
        <%= form.label "Input password" %><br />
        <%= form.text_field :passcode, placeholder: "Room password", class: "text_sign_up" %>
      </div></br>
      
      <div style="color: white; font-family: fantasy;">
        <%= form.text_field :private, value: true, class: "text_sign_up", type: :hidden %>
      </div></br>

      <%= form.submit "Set password", class: "button_start_game" %></br></br>
  <% end %>
</body>

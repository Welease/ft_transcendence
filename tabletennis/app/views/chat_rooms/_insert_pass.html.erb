<%= form_for(chat_room, url: {:controller => 'chat_rooms', :action=>'check_password'}, remote: true) do |form| %>
    <% if chat_room.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(chat_room.errors.count, "error") %> prohibited this chat_room from being saved:</h2>
        <ul>
          <% chat_room.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="color: white; font-family: fantasy;">
      <%= form.label "Insert password" %><br />
      <%= form.text_field :passcode, placeholder: "Room password", class: "text_sign_up" %>
    </div></br>

    <div style="color: white; font-family: fantasy;">
        <%= form.label "Insert password" %>
        <%= form.text_field :id, value: chat_room.id, type: :hidden%>
    </div></br>

    <%= form.submit "Join", class: "button_start_game" %></br></br>
  <% end %>

<div id="room-id" data-room-id="<%= @chat_room.try(:id) %>"></div>
<div id="user-id" data-user-id="<%= current_user.id %>"></div>

<div class="container-fluid">
  <div class="row">
    <div class="col-3 rooms-sidebar">
      <div class="card no-outline">
        <div class="card-body">
          <small>Logged in as</small><br>
          <b><%= current_user.nickname %><br></b>
        </div>
      </div>
      <hr>
      <%= render 'form', chat_room: ChatRoom.new %>
      <hr>
      <% @chat_rooms.each do |room| %>
        <%= link_to room, class: 'room-link' do %>
          <% active_class = (@chat_room == room) ? 'active' : '' %>
          <div class="card no-outline mb-2 room-card <%= active_class %>">
            <div class="card-body">
              <span class='name'><%= room.name %></span><br>
              <span class='member-count'>
                <small><%= room.users.uniq.count %> Members</small>
              </span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-9">
      <% if @chat_room.present? %>
        <div class="chat-room">
          <nav class="navbar navbar-light">
            <span class="navbar-brand" href="#">
              <b><%= @chat_room.name %></b>
            </span>
            <!-- <small><%= @chat_room.users.uniq.count %> Members</small> -->
          </nav>
          <div id="messages">
            <% @chat_room.messages.each do |message| %>
              <%= render 'messages/message', message: message %>
            <% end %>
          </div>
          <div class="chat-box">
            <%= render 'messages/form', message: Message.new, chat_room: @chat_room %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>